PROGRAM Split(INPUT, OUTPUT);
VAR
  Ch, Next: CHAR;
  Odds, Evens: TEXT;
BEGIN
  {Разбить INPUT на Odds и Evens}
  ASSIGN(Odds, 'H:\tests\odds.txt');
  ASSIGN(Evens, 'H:\tests\evens.txt');
  REWRITE(Odds);
  REWRITE(Evens);
  Next := 'O';
  READ(INPUT, Ch);
  WHILE Ch <> '#'
  DO
    BEGIN
      IF Next = 'O'
      THEN
        BEGIN
          WRITE(Odds, Ch);
          WRITE('Next = ', Next, ' ');
          WRITE(Ch);
          Next := 'E'
        END
      ELSE
        BEGIN
          WRITE(Evens, Ch);
          WRITE('Next = ', Next, ' ');
          WRITE(Ch);
          Next := 'O'
        END;
      READ(INPUT, Ch)
    END;
  WRITE(Odds, '#');
  WRITE(Evens, '#')
END.
